= form_for [@swit, @sour] do |f|
  - if @sour.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sour.errors.count, "error")} prohibited this sour from being saved:"
      %ul
        - @sour.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.hidden_field :swit_id, value: swit.id
  .field
    = f.hidden_field :username, value: current_user.email
  .actions
    = f.submit 'Sour'
