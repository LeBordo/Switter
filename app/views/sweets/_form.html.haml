= form_for [@swit, @sweet] do |f|
  - if @sweet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sweet.errors.count, "error")} prohibited this sweet from being saved:"
      %ul
        - @sweet.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.hidden_field :swit_id, value: swit.id
  .field
    = f.hidden_field :username, value: current_user.email
  .actions
    /= button_tag(type: 'submit', class: "fi-check") do
    /  %span.glyphicon.glyphicon-thumbs-up
    = f.submit "Add Sweet"