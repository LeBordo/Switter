= form_for @swit do |f|
  - if @swit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@swit.errors.count, "error")} prohibited this swit from being saved:"
      %ul
        - @swit.errors.full_messages.each do |msg|
          %li= msg

  .large-9.columns
    .field
      = f.text_area :body, id: "txt", maxlength: 140
    .field
      = f.hidden_field :author, value: current_user.email
    .field
      = f.hidden_field :likes, value: 0
    .field
      = f.hidden_field :unlike, value: 0
  .large-1.columns
    %h5.strong.span#count 140
    %div left
  .large-2.columns
    .actions#left
      = f.submit 'Submit', class: 'button small'

  
